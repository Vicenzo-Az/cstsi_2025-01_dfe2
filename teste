// Exemplo de teste para DataImport
import React from 'react';
import { render, screen, fireEvent } from '@testing-library/react';
import DataImport from '../components/dashboard/DataImport';

test('permite selecionar tipo de fonte e arquivo', () => {
  render(<DataImport />);
  
  // Seleciona tipo de fonte
  fireEvent.change(screen.getByLabelText('Tipo de Fonte'), {
    target: { value: 'API' }
  });
  
  // Seleciona arquivo
  const file = new File(['content'], 'data.csv', { type: 'text/csv' });
  fireEvent.change(screen.getByLabelText('Arquivo'), {
    target: { files: [file] }
  });
  
  expect(screen.getByLabelText('Tipo de Fonte').value).toBe('API');
  expect(screen.getByLabelText('Arquivo').files[0].name).toBe('data.csv');
});